/* component/schoolItem/index.wxss */
.item-box{
  width:750rpx;
  height:200rpx;
  background:rgba(255,255,255,1);
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(245,245,245,1);
  font-size: 32rpx;
  color: #666;
  display: flex;
}
.scholl-info{
  width: 520rpx;
}
.school-icon{
  width: 140rpx;
  height: 140rpx;
  margin-right: 43rpx;
}

.line-1{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.line-1 >image{
  width: 80rpx;
  height: 40rpx;
}

.line-2{
  color: #999;
  display: flex;
  font-size: 28rpx;
  flex-wrap: wrap;
}
.line-2 text.i{
  display: inline-block;
  width: 40%;
  margin-right: 30rpx;
}