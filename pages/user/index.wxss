.user-info-box{
  height:250rpx;
  border-bottom: 110rpx solid rgba(245,245,245,1);
  position: relative;
}
.user-bgs{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.vip-boxs{
  position: absolute;
  z-index: 3;
  left: 0;
  width: 100%;
  height: 150rpx;
  padding-top: 20rpx;
}
.vip-box{
  width:600rpx;
  height:120rpx;
  background:rgba(254,248,244,1);
  box-shadow:0rpx 0rpx 13rpx 1rpx rgba(190,190,190,0.2);
  border-radius:20rpx;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:  0 58rpx;
  box-sizing: border-box;
}
.vip-box image{
  width: 125rpx;
  height: 46rpx;
  
}
.graycale-100{
  -webkit-filter: grayscale(100%); /* Chrome, Safari, Opera */
  filter: grayscale(100%);
}

.user-menu{
  padding-left: 95rpx;
  box-sizing: border-box;
}
.user-menu-item{
  padding-right: 25rpx;
  box-sizing: border-box;
  height: 110rpx;
  border-bottom: 1rpx solid rgba(242,242,242,1);
  position: relative;
  line-height: 110rpx;
  font-size: 30rpx;
  color:#5A657F;
}
.user-info{
  position: relative;
  z-index:2;
  padding-top: 60rpx;
  box-sizing: border-box;
  margin-left: 24rpx;
}
.user-img{
  width:130rpx;
  height:130rpx;
  background:rgba(255,255,255,1);
  border-radius:50%;
  margin-right: 27rpx;
  box-sizing: border-box;
  padding: 10rpx;
}
.user-img image{
  width:100%;
  height:100%;
  border-radius: 50%;
 
}

.item-icon ,.item-icon-stu-info{
  position: absolute;
  left: -60rpx;
  top:40rpx;
  width:30rpx;
  height:35rpx;
}
.item-icon-open-vip{
  width:34rpx;
  height:28rpx;
}
.right-arrwor{
  position: absolute;
  top:40rpx !important;
  right: 25rpx !important;
  height: 32rpx;
  width: 15rpx;
}