/* pages/login/index.wxss */
Page{
  width: 100%;
  height: 100%;
  position: relative;
}
.backBI{
  position: fixed;
  width: 100%;
  height: 408rpx;
  top:0;
  left: 0;
}
.login-from{
  width: 640rpx;
  height: 60%;
}
.title-text{
  font-size:62rpx;
  font-family:FZQKBYSJW--GB1-0;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:5rpx;
  margin-bottom: 205rpx;
  text-shadow:0rpx 5rpx 3rpx rgba(47,32,5,0.5);
}
.performance-form-item{
  justify-content: space-between;
  align-items: center;
  margin-bottom: 80rpx;
  position: relative;
}
.performance-form-item text{
  font-size:30rpx;
  color:rgba(77,77,77,1);
}
.performance-form-item input{
  width:540rpx;
  padding-left: 80rpx;
  height:100rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(226, 226, 226, 1);
  border-radius:50rpx;
  font-size:30rpx;
  
}
.performance-form-item input::placeholder{
  color:rgba(153,153,153,1);
}
.menu-down{
  width:640rpx;
  height:100rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(129,154,151,1);
  opacity:0.9;
  border-radius:50rpx;
  line-height: 100rpx;
  margin-bottom: 38rpx;
  text-align: center;
  position: relative;
}
button{
  width:640rpx;
  height:100rpx;
  margin-top: 100rpx;
}

.down-icon{
  width:34rpx;
  height:19rpx;
  position: absolute;
  top: 44rpx;
  right: 36rpx;
}

.choose_all{
    /* padding: 20rpx; */
    height:546rpx;
    position: relative;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}
.expected_number_of_visitors{
   background:rgba(243,247,255,1);
   height: 90rpx; 
   font-size:28rpx;
   color:rgba(149,155,167,1);
   padding-left: 32rpx; 
   text-align: left;
   line-height: 90rpx;
}
