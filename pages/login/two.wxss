}
.performance{
  width:640rpx;
  top:10%;
}
.sub-title,.sub-title-explain{
  font-size:36rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:4rpx;
  margin-bottom: 60rpx;
}
.sub-title-explain{
  font-size:28rpx;
  margin-bottom: 104rpx;
}

.performance-form{

}
.performance-form-item{
  justify-content: space-between;
  align-items: center;
  margin-bottom: 80rpx;
  position: relative;
}
.performance-form-item text{
  font-size:30rpx;
  color:rgba(77,77,77,1);
}
.performance-form-item input{
  width:540rpx;
  padding-left: 80rpx;
  height:100rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(226, 226, 226, 1);
  border-radius:50rpx;
  font-size:30rpx;
  
}
.performance-form-item input::placeholder{
  color:rgba(153,153,153,1);
}

.branch{
  position: absolute;
  width: 50rpx;
